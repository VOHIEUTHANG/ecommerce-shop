<html lang="en">
   <head>
      <%- include('../partials/head'); %>
      <link rel="stylesheet" href="/css/login.css" />
      <link rel="stylesheet" href="/css/signup.css" />
      <link rel="stylesheet" href="/css/profile.css" />
   </head>
   <body>
      <div id="root">
         <%- include('../partials/header',{user,isLoggedIn}) %>
         <div id="main">
            <div id="profile">
               <div class="login signup">
                  <div class="container">
                     <div class="login-wrapper">
                        <div class="login-title">Thông tin người dùng</div>
                        <form id="form-update-user-profile" action="/api/v1/auth/signup" method="post">
                           <div class="avatar">
                              <label for="avatar-upload" class="avatar__upload">
                                 <div class="avatar-wrapper">
                                    <img
                                       id="avatar-img"
                                       src="https://images.wallpaperscraft.com/image/single/dog_husky_look_spotted_muzzle_40227_1920x1080.jpg"
                                       alt="avatar"
                                    />
                                 </div>
                                 <input id="avatar-upload" hidden name="avatar" type="file" accept="image/*" />
                              </label>
                           </div>
                           <div class="row form-container">
                              <div class="col-12">
                                 <input
                                    type="text"
                                    class="input-feild"
                                    readonly="true"
                                    placeholder="Tên đăng nhập"
                                    autocomplete="off"
                                    name="username"
                                    id="username"
                                 />
                              </div>

                              <div class="col-12">
                                 <input
                                    class="input-feild"
                                    readonly="true"
                                    placeholder="Email"
                                    id="email"
                                    type="email"
                                    name="email"
                                 />
                              </div>
                              <div class="col-12">
                                 <input
                                    class="input-feild"
                                    readonly="true"
                                    placeholder="Số điện thoại"
                                    id="phoneNumber"
                                    type="text"
                                    name="phoneNumber"
                                 />
                              </div>
                              <div class="col-12">
                                 <input
                                    type="text"
                                    class="input-feild"
                                    placeholder="Họ và tên"
                                    autocomplete="off"
                                    name="fullName"
                                    id="fullName"
                                 />
                              </div>
                              <div class="col-12">
                                 <input
                                    class="input-feild"
                                    placeholder="Địa chỉ"
                                    type="text"
                                    id="address"
                                    name="address"
                                 />
                              </div>
                              <div class="col-12">
                                 <div class="gender-wrapper">
                                    <div class="form-check">
                                       <input
                                          value="male"
                                          class="form-check-input gender-radio"
                                          type="radio"
                                          name="gender"
                                          id="gender_1"
                                       />
                                       <label class="form-check-label" for="gender_1"> Nam </label>
                                    </div>
                                    <div class="form-check">
                                       <input
                                          value="female"
                                          class="form-check-input gender-radio"
                                          type="radio"
                                          name="gender"
                                          id="gender_2"
                                       />
                                       <label class="form-check-label" for="gender_2"> Nữ </label>
                                    </div>
                                    <div class="form-check">
                                       <input
                                          value="flex"
                                          class="form-check-input gender-radio"
                                          type="radio"
                                          name="gender"
                                          id="gender_3"
                                       />
                                       <label class="form-check-label" for="gender_3"> Khác </label>
                                    </div>
                                 </div>
                              </div>
                              <button type="submit" class="button button-full">CẬP NHẬT</button>
                           </div>
                        </form>
                     </div>
                  </div>
               </div>
            </div>
         </div>
         <%- include('../partials/footer') %>
      </div>
      <%- include('../partials/foot'); %>
      <script type="module">
         import { configHeaders, localStorage, responseHandler, getFormData } from '/js/utils/index.js';

         const validate = new window.JustValidate('#form-update-user-profile');
         validate
            .addField('#fullName', [
               {
                  rule: 'minLength',
                  value: 3,
                  errorMessage: 'Họ và tên phải có ít nhất 3 ký tự',
               },
               {
                  rule: 'maxLength',
                  value: 30,
                  errorMessage: 'Họ và tên chỉ được có tối đa 30 ký tự',
               },
            ])
            .onSuccess(async (event) => {
               const totalData = getFormData(event.target);
               const genderOptionSelected = $('.gender-radio:checked');
               const avatarNode = $('#avatar-upload');

               const formData = new FormData();

               formData.append(
                  'userInfo',
                  JSON.stringify({
                     fullName: totalData.fullName,
                     address: totalData.address,
                     gender: genderOptionSelected.val(),
                  }),
               );
               if (avatarNode[0]?.files?.length > 0) {
                  const avatarFile = avatarNode[0].files[0];
                  formData.append('avatar', avatarFile);
               }

               const handleUpdateInfoSuccess = () => {
                  toastr.success('Cập nhật thông tin người dùng thành công !');
               };
               const { accessToken, refreshToken } = localStorage.getStore();
               const config = configHeaders(accessToken, 'multipart/form-data');
               const { data, status } = await axios.put('/api/user/update-info', formData, config);
               data.status === 'success' && handleUpdateInfoSuccess();
               if (data?.message === 'jwt expired') {
                  const refreshTokenResponse = await axios.post('/api/user/refresh-token', { refreshToken });
                  responseHandler(refreshTokenResponse, async (data) => {
                     const { accessToken } = data.payload;
                     localStorage.setStore(data.payload);
                     const config = configHeaders(accessToken, 'multipart/form-data');
                     const updateInfoResult = await axios.put('/api/user/update-info', formData, config);

                     responseHandler(updateInfoResult, (data) => {
                        data.status === 'success' && handleUpdateInfoSuccess();
                     });
                  });
               } else if (data?.message === 'No auth token') {
                  window.location.href('/login');
               }
            });
      </script>
      <script>
         const uploadAvatart = $('#avatar-upload');
         const imgPreview = $('#avatar-img');
         uploadAvatart.change(function () {
            if (this.files && this.files[0]) {
               const tempURL = URL.createObjectURL(this.files[0]);
               imgPreview.attr('src', tempURL);
            }
         });
      </script>
   </body>
</html>
