<html lang="en">
   <head>
      <%- include('../partials/head'); %>
      <link rel="stylesheet" href="css/home.css" />
      <title>HOME PAGE</title>
   </head>
   <body>
      <div class="root">
         <%- include('../partials/header',{user,isLoggedIn,brandNameList,categoryNameList}); %>
         <div id="main">
            <div class="banner-container">
               <div class="glide">
                  <div class="glide__track" data-glide-el="track">
                     <ul class="glide__slides">
                        <li class="glide__slide">
                           <a href="#">
                              <img
                                 src="https://cdn.shopify.com/s/files/1/0603/3031/1875/files/0715_ct8532-105_web_03_1512x.jpg?v=1657880022"
                                 alt=""
                              />
                           </a>
                        </li>
                        <li class="glide__slide">
                           <a href="#">
                              <img
                                 src="https://cdn.shopify.com/s/files/1/0603/3031/1875/files/0715_BB550WT1_web_03_1512x.jpg?v=1657880102"
                                 alt=""
                              />
                           </a>
                        </li>
                        <li class="glide__slide">
                           <a href="#">
                              <img
                                 src="https://cdn.shopify.com/s/files/1/0603/3031/1875/files/Web_Desktop_2x_d7775c58-a3f5-4e05-b95c-00a19e19a32d_1950x.jpg?v=1657879961"
                                 alt=""
                              />
                           </a>
                        </li>
                        <li class="glide__slide">
                           <a href="#">
                              <img
                                 src="https://cdn.shopify.com/s/files/1/0603/3031/1875/files/Web_Desktop_2x_e9224153-8aa8-400e-a3ce-00a2621e5d8e_1950x.jpg?v=1658485552"
                                 alt=""
                              />
                           </a>
                        </li>
                     </ul>
                  </div>
                  <div class="glide__arrows" data-glide-el="controls">
                     <button class="glide__arrow glide__arrow--left" data-glide-dir="<">
                        <i class="fa-solid fa-angle-left"></i>
                     </button>
                     <button class="glide__arrow glide__arrow--right" data-glide-dir=">">
                        <i class="fa-solid fa-angle-right"></i>
                     </button>
                  </div>
                  <div class="glide__bullets" data-glide-el="controls[nav]">
                     <button class="glide__bullet" data-glide-dir="=0"></button>
                     <button class="glide__bullet" data-glide-dir="=1"></button>
                     <button class="glide__bullet" data-glide-dir="=2"></button>
                  </div>
               </div>
            </div>
            <div class="container">
               <div class="main-container">
                  <div class="category">
                     <h3 class="category__title text-title">Sản phẩm mới nhất</h3>
                     <div class="category__container">
                        <div class="glide category-product">
                           <div class="glide__track" data-glide-el="track">
                              <ul class="glide__slides">
                                 <li class="glide__slide">
                                    <a href="#" class="product-link">
                                       <div class="category-item wow flipInY">
                                          <div class="category__image">
                                             <img
                                                src="https://cdn.shopify.com/s/files/1/0603/3031/1875/products/DM7866-162_1f5d2cdf-4e3e-44cb-9c84-5a507b81bcdb_540x.jpg?v=1657780747"
                                                alt=""
                                             />
                                          </div>
                                          <div class="category__desc">
                                             <div class="category__brand">Jordan</div>
                                             <div class="category__name">Air Jordan 1 Low SE New Emerald</div>
                                             <div class="category__price">
                                                GIÁ
                                                <span>$204.00</span>
                                             </div>
                                          </div>
                                          <div class="category__foot" style="height: 1rem"></div>
                                       </div>
                                    </a>
                                 </li>
                                 <li class="glide__slide">
                                    <a href="#" class="product-link">
                                       <div class="category-item wow flipInY">
                                          <div class="category__image">
                                             <img
                                                src="https://cdn.shopify.com/s/files/1/0603/3031/1875/products/DM1199-140_04cc4b63-b3f3-4c6e-b007-8e233fda96b4_460x.jpg?v=1655891464"
                                                alt=""
                                             />
                                          </div>
                                          <div class="category__desc">
                                             <div class="category__brand">NIKE</div>
                                             <div class="category__name">Air Jordan 1 Low SE True Blue</div>
                                             <div class="category__price">
                                                GIÁ
                                                <span>$166.00</span>
                                             </div>
                                          </div>
                                          <div class="category__foot" style="height: 1rem"></div>
                                       </div>
                                    </a>
                                 </li>
                              </ul>
                           </div>
                           <div class="glide__arrows" data-glide-el="controls">
                              <button class="glide__arrow glide__arrow--left wow fadeInLeft" data-glide-dir="<">
                                 <i class="fa-solid fa-angle-left"></i>
                              </button>
                              <button class="glide__arrow glide__arrow--right wow fadeInRight" data-glide-dir=">">
                                 <i class="fa-solid fa-angle-right"></i>
                              </button>
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
      <%- include('../partials/footer'); %> <%- include('../partials/foot'); %>

      <script src="js/library/glide.min.js"></script>
      <script>
         new Glide('.glide', {
            type: 'carousel',
            autoplay: 5000,
            hoverpause: true,
         }).mount();

         new Glide('.glide.category-product', {
            type: 'carousel',
            perView: 4,
            gap: 20,
         }).mount();
      </script>
   </body>
</html>
