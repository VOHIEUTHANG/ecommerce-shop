                     <div class="product-style">
                        <div class="custom-row">
                           <% productsData.products.forEach(function(product){%>
                              <div class="custom-col-5 custom-col-style mb-4 wow fadeInUp">
                                 <div class="product-wrapper">
                                    <div class="product-img">
